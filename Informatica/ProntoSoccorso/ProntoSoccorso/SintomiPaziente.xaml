<Window x:Class="ProntoSoccorso.SintomiPaziente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProntoSoccorso"
        mc:Ignorable="d"
        Title="SintomiPaziente" Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0">
            <Label Name="nomePaziente" Content="Nome paziente:" Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="25" Margin="8,12,0,4" MaxWidth="250" Height="50"/>
            <TextBlock x:Name="nP" Margin="75,10,70,15" MinHeight="50" />
            
            <Label Name="cognomePaziente" Content="Cognome paziente:" Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="25" Margin="8,19,0,4" MaxWidth="250" Height="50"/>
            <TextBlock x:Name="cP" Margin="75,10,70,15" MinHeight="50"  />

        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <DataGrid x:Name="Sintomi_Paziente" MinWidth="300" />
            </StackPanel>
    </Grid>
</Window>
