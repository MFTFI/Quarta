<Window x:Class="Auto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid x:Name="DtgAuto"/>
        <Label Content="Filtra per categoria"/>
        <RadioButton GroupName="tipoAuto" Content="Nuova" Checked="OnRbtnNuovaChecked"/>
        <RadioButton GroupName="tipoAuto" Content="Usata" Checked="OnRbtnUsataChecked"/>
        <RadioButton GroupName="tipoAuto" Content="Qualsiasi" Checked="OnRbtnQualsiasiChecked" IsChecked="True"/>
    </StackPanel>
</Window>
